{% extends 'base.html.twig' %}

{% block title movie is not null ? movie.title : 'Not Found' %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('payment') }}
{% endblock %}

{% block body %}
    <section class="example-wrapper w-75 m-auto">
        {% if movie is not null %}
            <h1 class="mb-5">{{ movie.title }}</h1>

            <img src="{{ movie.poster }}" alt="{{ movie.title }} poster image" class="float-end">
            <ul>
                <li class="mb-2">Id : {{ movie.id }}</li>
                <li class="mb-2">Country : {{ movie.country }}</li>
                <li class="mb-2">Plot : {{ movie.plot }}</li>
                <li class="mb-2">Released At : {{ movie.releasedAt|date('d M Y') }}</li>
                <li class="mb-2">Genre : {{ movie.genre|map(genre => genre.name)|join(', ') }}</li>
            </ul>
        {% else %}
            <h1>Movie not found</h1>
        {% endif %}
    </section>
{% endblock %}