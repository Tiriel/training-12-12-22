{% extends 'base.html.twig' %}

{% block title movie is not null ? movie.title : 'Not Found' %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('payment') }}
{% endblock %}

{% block body %}
    <section class="example-wrapper">
        {% if movie is not null %}
            <h1>{{ movie.title }}</h1>

            <ul>
                <li>Id : {{ movie.id }}</li>
                <li>Released At : {{ movie.releasedAt|date('d M Y') }}</li>
                <li>Genre : {{ movie.genre|join(', ') }}</li>
            </ul>
        {% else %}
            <h1>Movie not found</h1>
        {% endif %}
    </section>
{% endblock %}